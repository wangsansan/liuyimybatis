	</servlet-mapping> -->
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	<!-- 配置SESSION超时，单位是分钟 -->
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
	<!-- 项目默认页 -->	
	<welcome-file-list>
		<welcome-file>/jsp/user/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
